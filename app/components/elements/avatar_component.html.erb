<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(@preset), class: @classes %>
<% else %>
  <svg xmlns="http://www.w3.org/2000/svg"
       role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice"
       focusable="false" width="<%= @width %>" height="<%= @height %>" class="<%= @classes %>" viewBox="0 0 100 100">
    <title>No user picture</title>
    <rect width="100%" height="100%" fill="#868e96"></rect>
    <text x="50%" y="50%" fill="#dee2e6" dominant-baseline="middle" text-anchor="middle">No picture</text>
  </svg>
<%- end %>
